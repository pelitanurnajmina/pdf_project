<div class="container">
  <div class="row">

    <div class="col-md-6 offset-md-3 text-center mt-4">
      <h2>New List</h2>
    </div>

    <div class="col-md-6 offset-md-3">
      <%= form_with model: @list, multipart: true do |form| %>
        <div class="form-group">
          <%= form.label :title %><br>
          <%= form.text_field :title, :class => "form-control" %>
          <% @list.errors.full_messages_for(:title).each do |message| %>
            <div><%= message %></div>
          <% end %>
        </div>

        <div class="form-group">
          <%= form.label :filename %><br>
          <%= form.file_field :filename, :class => "form-control" %>
          <% @list.errors.full_messages_for(:filename).each do |message| %>
            <div><%= message %></div>
          <% end %>
        </div>

        <div class="form-group">
          <%= form.submit %>
        </div>
      <% end %>
    </div>

  </div>
</div>


