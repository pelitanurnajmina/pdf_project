<div class="container">
  <div class="row">

    <div class="col-md-6 offset-md-3 mt-5">
      <div class="box-form">
        <h2 class="text-center">New List</h2>
        <hr>
        <%= form_with model: @list, multipart: true do |form| %>
          <div class="form-group">
            <%= form.label :title %><br>
            <%= form.text_field :title, :class => "form-control" %>
            <% @list.errors.full_messages_for(:title).each do |message| %>
              <div><%= message %></div>
            <% end %>
          </div>

          <div class="form-group">
            <%= form.label :filename %><br>
            <%= form.file_field :filename, :class => "form-control", :accept=> ".pdf" %>
            <% @list.errors.full_messages_for(:filename).each do |message| %>
              <div><%= message %></div>
            <% end %>
          </div>

          <div class="form-group">
            <br>
            <%= link_to 'Back', :back, :class => "btn btn-dark" %>
            <button type="submit" class="btn btn-primary ">Create</button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


