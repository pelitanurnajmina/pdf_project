<%= form_with model: list do |form| %>
  <div class="form-group">
    <%= form.label :title %><br>
    <%= form.text_field :title, :class => "form-control" %>
    <% list.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :filename %><br>
    <%= form.text_field :filename, :class => "form-control" %><br>
    <% list.errors.full_messages_for(:filename).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.submit %>
  </div>
<% end %>